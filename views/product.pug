extends layout
block content
    #product.container
        .product-details
            .images
                .row
                    .col-sm-12.col-md-12.col-lg-12.text-center
                        img.main-display(src=product.displayPixLink, alt="image", style="height:500px; width:329.266px;")
                    .col-sm-12.col-md-12.col-lg-12
                        .product-display
                            each item in product.showCaseLink
                                .image.text-center
                                    img(src=item, alt=item, style="height:95%; width:100%;")
            .info
                .name
                    header
                        h2 
                            strong #{product.brandName}
                    h3 &#x20A6; #{product.price}
                    p In stock: #{product.inStock}
                hr
                .details
                    p #{product.details}
                hr
                .color-and-size
                    .form-field
                        label Color
                        select(name="productColor")
                            each color, index in product.color
                                option(value=color) #{color}
                    .form-field
                        label Size
                        select(name="productSize")
                            each size in product.sizes
                                option(value=color) #{size}
                hr
                .description
                    header
                        h4 #{product.brandName}
                    ul
                        each item in product.description
                            li #{item}
                    